#:kivy 1.2.0


<RollIndicator>:
    size_hint: (1, 1)
    orientation: "horizontal"

    canvas:
        Color:
            rgb: 1, 1, 1
        Line:
            width: 1.5
            points: 0.30*self.width, self.height/2, 0.36*self.width, self.height/2
        Line:
            width: 1.5
            points: 0.64*self.width, self.height/2, 0.7*self.width, self.height/2

    RotatableImage:
        id: indicator_image
        size_hint: (0.5, 0.5)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        source: root.bot_graphic_path

<RotatableImage>
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            axis: 0, 0, 1
            origin: root.center
    canvas.after:
        PopMatrix

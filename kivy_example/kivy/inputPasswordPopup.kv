#:kivy 1.2.0

<InputPasswordPopup>:
    title: 'Bot Password'
    size_hint: None, None
    size: 400, 120
    auto_dismiss: False
    text: input.text

    BoxLayout:
        orientation: 'vertical'
        pos: self.pos
        size: root.size

        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Enter Password'

            TextInput:
                id: input
                multiline: False
                hint_text:'Password'
                on_text: root._error_property = ''

        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Cancel'
                background_color: 0,1,255,0.7
                on_press: root._cancel()

            Button:
                text: 'Enter'
                background_color: 255,0,0,0.9
                on_press: root._enter()
